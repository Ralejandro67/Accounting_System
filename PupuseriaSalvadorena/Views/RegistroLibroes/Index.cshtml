@model IEnumerable<PupuseriaSalvadorena.Models.RegistroLibro>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container mt-4 text-right">
    <button type="button" class="btn btn-primary mt-3" id="AddLibro">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2" />
        </svg>
        Nuevo Libro
    </button>
</div>

<div class="m-1 row row-cols-1 row-cols-md-4 g-4">
    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <div class="col">
                <div class="card color-card">
                    <div class="card-body custom-card-body">
                        <hr class="hr-gold custom-hr"/>
                        <div class="form-group">
                            <div class="form-group">
                                <h2 class="col-form-label text-center">@item.IdRegistroLibros</h2>
                            </div>
                            <div class="form-group">
                                <label class="col-form-label">Monto Total:</label>
                                <label class="col-form-label">@item.MontoTotal</label>
                            </div>
                            <div class="form-group">
                                <label class="col-form-label">Fecha de Registro:</label>
                                <label class="col-form-label mt-n5">@item.FechaRegistro.ToString("dd/MM/yyyy")</label>
                            </div>
                            <div class="form-group">
                                <label class="col-form-label">Descripcion:</label>
                                <label class="col-form-label">@item.Descripcion</label>
                            </div>
                        </div>
                        <button type="button" class="btn btn-primary edit-libro" data-id="@item.IdRegistroLibros">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z" />
                            </svg>
                            Editar
                        </button>
                        <button type="button" class="btn btn-danger delete-libro" data-id="@item.IdRegistroLibros">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
                            </svg>
                            Eliminar
                        </button>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="d-flex" style="width: 500vh;">
            <h5>No hay libros registrados.</h5>
        </div>
    }
</div>


<div class="modal fade" id="newLibroModal" tabindex="-1" role="dialog" aria-labelledby="newLibroModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newLibroModalLabel">Nuevo Libro</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.Partial("_newLibroPartial", new PupuseriaSalvadorena.Models.RegistroLibro())
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editLibroModal" tabindex="-1" role="dialog" aria-labelledby="editLibroModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editLibroModalLabel">Editar Libro</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.Partial("_editLibroPartial", new PupuseriaSalvadorena.Models.RegistroLibro())
            </div>
        </div>
    </div>
</div>