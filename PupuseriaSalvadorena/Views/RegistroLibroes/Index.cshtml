@model IEnumerable<PupuseriaSalvadorena.Models.RegistroLibro>

@{
    ViewData["Title"] = "Libros Contables";
}

@section Scripts {
    <script src="~/js/registrolibros.js" asp-append-version="true"></script>
}

<div class="card-body table-body-custom pb-4">
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="mb-0">
                <img src="~/images/libroscontables.png" alt="Icono Libros Contables" style="height: 60px;" />
                Libros Contables
            </h1>
            <button type="button" class="btn btn-primary nav-link-icon agregar-boton" id="AddLibro">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3z" />
                </svg> Nuevo Libro
            </button>
        </div>
    </div>
    <div class="container mt-4">
        Libros contables registrados en el sistema.
    </div>
</div>
<div class="card-body table-body-custom2">
    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <div class="CartasPresupuestos" onclick="location.href='@Url.Action("Details", new { id = item.IdRegistroLibros })'">
                <strong class="mt-1" style="text-align: left !important;">@item.Descripcion</strong>
                <small class="small">@item.FechaRegistro.ToString("dd/MM/yyyy")</small>
                <small class="small">@(item.Conciliado ? "Conciliado" : "Sin Conciliar")</small>
                <div class="go-corner" href="#">
                </div>
                <div class="botoneslibros">
                    <button type="button" class="btn btn-primary print-libro" id="BtnImprimir" data-id="@item.IdRegistroLibros">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-printer-fill" viewBox="0 0 16 16">
                            <path d="M5 1a2 2 0 0 0-2 2v1h10V3a2 2 0 0 0-2-2zm6 8H5a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1v-3a1 1 0 0 0-1-1" />
                            <path d="M0 7a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2h-1v-2a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2v2H2a2 2 0 0 1-2-2zm2.5 1a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1" />
                        </svg>
                    </button>
                    <button type="button" class="btn btn-primary edit-libro" id="BtnEditar" data-id="@item.IdRegistroLibros">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                            <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z" />
                        </svg>
                    </button>
                    <button type="button" class="btn btn-danger delete-libro" id="BtnEliminar" data-id="@item.IdRegistroLibros">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                            <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
                        </svg>
                    </button>
                </div>
            </div>
        }
    }
    else
    {
        <div class="container mt-4 mb-4">
            <h4 class="text-center">No hay libros registrados.</h4>
        </div>
    }
</div>
<div class="modal fade" id="newLibroModal" tabindex="-1" role="dialog" aria-labelledby="newLibroModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newLibroModalLabel">Nuevo Libro</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.Partial("_newLibroPartial", new PupuseriaSalvadorena.Models.RegistroLibro())
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="editLibroModal" tabindex="-1" role="dialog" aria-labelledby="editLibroModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editLibroModalLabel">Editar Libro</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.Partial("_editLibroPartial", new PupuseriaSalvadorena.Models.RegistroLibro())
            </div>
        </div>
    </div>
</div>