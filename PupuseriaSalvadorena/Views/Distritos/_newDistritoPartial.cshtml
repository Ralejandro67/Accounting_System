@model PupuseriaSalvadorena.Models.Distrito

<form id="distritoForm" asp-action="Create" asp-controller="Distritos" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="NombreDistrito" class="control-label"></label>
        <input asp-for="NombreDistrito" class="form-control" />
        <span asp-validation-for="NombreDistrito" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdCanton" class="control-label"></label>
        <select asp-for="IdCanton" asp-items="@ViewBag.Distritos" class="form-control">
            <option value="">Seleccione un impuesto</option>
        </select>
        <span asp-validation-for="IdCanton" class="text-danger"></span>
    </div>
    <div class="form-group text-right">
        <button type="button" id="submitDistritosForm" class="btn btn-primary">Agregar</button>
    </div>
</form>