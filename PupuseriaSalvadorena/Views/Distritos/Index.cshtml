@model IEnumerable<PupuseriaSalvadorena.Models.Distrito>

@{
    ViewData["Title"] = "Index";
}

@section Scripts {
    <script src="~/js/distritos.js" asp-append-version="true"></script>
}

<h1>Index</h1>

<div class="container mt-4 text-right">
    <button type="button" class="btn btn-primary mt-3" id="AddDistrito">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2" />
        </svg>
        Nuevo Libro
    </button>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreDistrito)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreCanton)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreDistrito)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCanton)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdDistrito">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdDistrito">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdDistrito">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="modal fade" id="newDistritoModal" tabindex="-1" role="dialog" aria-labelledby="newDistritoModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newDistritoModalLabel">Nuevo Distrito</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.Partial("_newDistritoPartial", new PupuseriaSalvadorena.Models.Distrito())
            </div>
        </div>
    </div>
</div>