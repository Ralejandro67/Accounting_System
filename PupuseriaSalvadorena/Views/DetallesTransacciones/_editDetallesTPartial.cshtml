@model PupuseriaSalvadorena.Models.DetalleTransaccion

<form id="editdetallesTForm" asp-action="Edit" asp-controller="DetallesTransacciones" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Monto" class="form-control" id="MontoTotalE" />
    <input type="hidden" asp-for="IdTransaccion" class="form-control" />
    <input type="hidden" asp-for="Conciliado" class="form-control" value="false">
    <input asp-for="Frecuencia" class="form-control" />
    <div class="card-body card-body-custom">
        <div class="row no-gutters">
            <div class="col text-center item">
                <div class="item-value"><strong>Subtotal</strong></div>
                <div id="montoDisplayE" class="text-note">₡@ViewBag.ValorSubtotal</div>
            </div>
            <div class="col text-center item">
                <div class="item-value"><strong>Impuesto</strong></div>
                <div id="inputMontoImpuestoE" class="text-note">₡@ViewBag.valorImpuesto</div>
            </div>
            <div class="col text-center item">
                <div class="item-value"><strong>Total</strong></div>
                <div id="inputMontoTotalE" class="text-note">₡@ViewBag.Monto</div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label">Descripción</label>
        <input asp-for="DescripcionTransaccion" class="form-control" placeholder="Descripción de la transacción" />
        <span asp-validation-for="DescripcionTransaccion" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label">Monto</label>
                <div class="input-group">
                    <span class="input-group-text">₡</span>
                    <input asp-for="Monto" class="form-control" id="inputMontoE" />
                    <span asp-validation-for="Monto" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" min="1" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="IdImpuesto" class="control-label"></label>
                <select asp-for="IdImpuesto" asp-items="@ViewBag.Impuestos2" class="form-control" id="IdImpuestoE">
                    <option value="">Seleccione un impuesto</option>
                </select>
                <span asp-validation-for="IdImpuesto" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="IdTipo" class="control-label"></label>
                <select asp-for="IdTipo" asp-items="@ViewBag.Tipos" class="form-control" id="IdTipoE">
                    <option value="">Tipo de transacción</option>
                </select>
                <span asp-validation-for="IdTipo" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group text-right">
        <button type="submit" id="submitEditDetallesForm" class="btn btn-primary agregar-boton">Editar</button>
    </div>
</form>