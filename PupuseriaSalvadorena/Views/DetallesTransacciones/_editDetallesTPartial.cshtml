@model PupuseriaSalvadorena.Models.DetalleTransaccion

<form id="editdetallesTForm" asp-action="Edit" asp-controller="DetallesTransacciones" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="IdTransaccion" />
    <input type="hidden" asp-for="IdMovimiento" />
    <div class="form-group">
        <label asp-for="DescripcionTransaccion" class="control-label"></label>
        <input asp-for="DescripcionTransaccion" class="form-control" />
        <span asp-validation-for="DescripcionTransaccion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cantidad" class="control-label"></label>
        <input asp-for="Cantidad" class="form-control" />
        <span asp-validation-for="Cantidad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Monto" class="control-label"></label>
        <input asp-for="Monto" class="form-control" />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdTipo" class="control-label"></label>
        <select asp-for="IdTipo" asp-items="@ViewBag.TipoTransac2" class="form-control">
        </select>
        <span asp-validation-for="IdTipo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdImpuesto" class="control-label"></label>
        <select asp-for="IdImpuesto" asp-items="@ViewBag.Impuestos2" class="form-control">
        </select>
        <span asp-validation-for="IdImpuesto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Conciliado" class="control-label"></label>
        <input asp-for="Conciliado" class="form-control" />
        <span asp-validation-for="Conciliado" class="text-danger"></span>
    </div>
    <div class="form-group text-right">
        <button type="submit" id="submitEditDetallesForm" class="btn btn-primary">Editar</button>
    </div>
</form>