@using System.Globalization;

@model IEnumerable<PupuseriaSalvadorena.Models.DetalleTransaccion>

@{
    ViewData["Title"] = "Transacciones";
}

@section Scripts {
    <script src="~/js/detallestransacciones.js" asp-append-version="true"></script>
}

<h1>Transacciones</h1>

<div class="container mt-4 text-right">
    <button type="button" class="btn btn-primary mt-3" id="AddTransaccion">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2" />
        </svg>
        Transaccion
    </button>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Transaccion
            </th>
            <th>
                Descrpcion
            </th>
            <th>
                Cantidad
            </th>
            <th>
                Monto de Transaccion
            </th>
            <th>
                Fecha
            </th>
            <th>
                Tipo de Transaccion
            </th>
            <th>
                Impuesto
            </th>
            <th>
                Recurrente
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdRegistroLibros)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTransaccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionTransaccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @(item.Monto.ToString("C", new CultureInfo("es-CR")))
            </td>
            <td>
                @item.FechaTrans.ToString("dd/MM/yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoTransac)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreImpuesto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recurrencia)
            </td>
            <td>
                <button type="button" class="btn btn-primary edit-transaccion" data-id="@item.IdTransaccion">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                        <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z" />
                    </svg>
                    Editar
                </button>
                <button type="button" class="btn btn-danger delete-transaccion" data-id="@item.IdTransaccion">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                        <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
                    </svg>
                    Eliminar
                </button>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="modal fade" id="newDetallesTModal" tabindex="-1" role="dialog" aria-labelledby="newDetallesTModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newDetallesTModalLabel">Nueva Transaccion</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.Partial("_newDetallesTPartial", new PupuseriaSalvadorena.Models.DetalleTransaccion())
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="editDetallesTModal" tabindex="-1" role="dialog" aria-labelledby="editDetallesTModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editDetallesTModalLabel">Editar Transaccion</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.Partial("_editDetallesTPartial", new PupuseriaSalvadorena.Models.DetalleTransaccion())
            </div>
        </div>
    </div>
</div>