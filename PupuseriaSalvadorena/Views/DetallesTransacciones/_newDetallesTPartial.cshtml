@model PupuseriaSalvadorena.Models.DetalleTransaccion

@{
    Model.FechaTrans = Model.FechaTrans == default ? DateTime.Now : Model.FechaTrans;
}

<form id="detallesTForm" asp-action="Create" asp-controller="DetallesTransacciones" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="IdRegistroLibros" class="control-label"></label>
        <select asp-for="IdRegistroLibros" asp-items="@ViewBag.RegistroLibros" class="form-control">
            <option value="">Seleccione un registro de libros</option>
        </select>
        <span asp-validation-for="IdRegistroLibros" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DescripcionTransaccion" class="control-label"></label>
        <input asp-for="DescripcionTransaccion" class="form-control" />
        <span asp-validation-for="DescripcionTransaccion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cantidad" class="control-label"></label>
        <input asp-for="Cantidad" class="form-control" />
        <span asp-validation-for="Cantidad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Monto" class="control-label"></label>
        <input asp-for="Monto" class="form-control" />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FechaTrans" class="control-label"></label>
        <input asp-for="FechaTrans" class="form-control" type="date"/>
        <span asp-validation-for="FechaTrans" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdTipo" class="control-label"></label>
        <select asp-for="IdTipo" asp-items="@ViewBag.TipoTransac" class="form-control">
            <option value="">Seleccione un tipo de transaccion</option>
        </select>
        <span asp-validation-for="IdTipo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdImpuesto" class="control-label"></label>
        <select asp-for="IdImpuesto" asp-items="@ViewBag.Impuestos" class="form-control">
            <option value="">Seleccione un impuesto</option>
        </select>
        <span asp-validation-for="IdImpuesto" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="Recurrencia" /> @Html.DisplayNameFor(model => model.Recurrencia)
        </label>
    </div>
    <div class="form-group recurrence-fields">
        <label for="FechaRecurrencia">Dia de la transacción:</label>
        <input asp-for="FechaRecurrencia" type="date" class="form-control" />
        <span asp-validation-for="FechaRecurrencia" class="text-danger"></span>
    </div>
    <div class="form-group recurrence-fields">
        <label for="Frecuencia">Frecuencia</label>
        <select asp-for="Frecuencia" class="form-control">
            <option value="No Recurrente">Seleccionar...</option>
            <option value="Semanal">Semanal</option>
            <option value="Mensual">Mensual</option>
            <option value="Anual">Anual</option>
        </select>
        <span asp-validation-for="Frecuencia" class="text-danger"></span>
    </div>
    <div class="form-group text-right">
        <button type="button" id="submitDetallesForm" class="btn btn-primary">Agregar</button>
    </div>
</form>