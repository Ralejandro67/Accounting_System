@model PupuseriaSalvadorena.Models.Impuesto

<form id="editImpuestoForm" asp-action="Edit" asp-controller="Impuestos" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="IdImpuesto" />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="NombreImpuesto" class="control-label"></label>
                <input asp-for="NombreImpuesto" class="form-control" placeholder="Nombre del impuesto" />
                <span asp-validation-for="NombreImpuesto" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label">Tasa Porcentual</label>
                <div class="input-group">
                    <span class="input-group-text">%</span>
                    <input asp-for="Tasa" class="form-control" id="Value"/>
                    <span asp-validation-for="Tasa" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Descripcion" class="control-label"></label>
        <textarea asp-for="Descripcion" class="form-control" id="CampoArea" placeholder="Descripcion del impuesto"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group form-check" style="padding-left: 0; margin-bottom: 0.5rem;">
        <input asp-for="Estado" type="checkbox" id="check" class="form-check-input" />
        <label asp-for="Estado" for="check" class="form-check-label CheckboxTransac"><span></span></label>@Html.DisplayNameFor(model => model.Estado)
    </div>
    <div class="form-group text-right">
        <button type="submit" id="submitEditForm" class="btn btn-primary agregar-boton">Editar</button>
    </div>
</form>