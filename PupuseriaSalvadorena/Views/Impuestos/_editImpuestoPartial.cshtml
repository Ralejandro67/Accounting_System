@model PupuseriaSalvadorena.Models.Impuesto

<form id="editImpuestoForm" asp-action="Edit" asp-controller="Impuestos" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="IdImpuesto" />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="NombreImpuesto" class="control-label"></label>
                <input asp-for="NombreImpuesto" class="form-control" />
                <span asp-validation-for="NombreImpuesto" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label">Tasa Porcentual</label>
                <div class="input-group">
                    <span class="input-group-text">%</span>
                    <input asp-for="Tasa" class="form-control" />
                    <span asp-validation-for="Tasa" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="Estado" /> @Html.DisplayNameFor(model => model.Estado)
        </label>
    </div>
    <div class="form-group">
        <label asp-for="Descripcion" class="control-label"></label>
        <textarea asp-for="Descripcion" class="form-control" id="CampoArea"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group text-right">
        <button type="submit" id="submitEditForm" class="btn btn-primary">Editar</button>
    </div>
</form>