@model PupuseriaSalvadorena.Models.Presupuesto

@{
    Model.FechaInicio = Model.FechaInicio == default ? DateTime.Now : Model.FechaInicio;
    Model.FechaFin = Model.FechaFin == default ? DateTime.Now : Model.FechaFin;
}

<form id="PresupuestoForm" asp-action="Create" asp-controller="HistorialCompras" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="SaldoUsado" class="form-control" />
    <div class="form-group">
        <label asp-for="NombreP" class="control-label"></label>
        <input asp-for="NombreP" class="form-control" />
        <span asp-validation-for="NombreP" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" class="form-control" type="date" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="FechaFin" class="control-label"></label>
                <input asp-for="FechaFin" class="form-control" type="date" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="SaldoPresupuesto" class="control-label"></label>
                <input asp-for="SaldoPresupuesto" class="form-control" />
                <span asp-validation-for="SaldoPresupuesto" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="IdCategoriaP" class="control-label"></label>
                <select asp-for="IdCategoriaP" asp-items="@ViewBag.CategoriaP" class="form-control">
                    <option value="">Seleccione una Categoria</option>
                </select>
                <span asp-validation-for="IdCategoriaP" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Estado" class="control-label"></label>
        <input asp-for="Estado" class="form-control" type="date" />
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Descripcion</label>
        <textarea asp-for="Descripcion" class="form-control" id="CampoArea"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group text-right">
        <button type="button" id="submitPresupuesto" class="btn btn-primary">Agregar</button>
    </div>
</form>