@model PupuseriaSalvadorena.Models.CategoriaPresupuesto

<form id="CategoriaPresupuestoForm" asp-action="Create" asp-controller="CategoriaPresupuestoes" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="control-label">Nombre de la Categoria</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Tipos de Presupuestos</label>
        <select asp-for="Estado" class="form-control" >
            <option value="">Tipo de presupuesto</option>
            <option value="false">Ingreso</option>
            <option value="true">Egreso</option>
        </select>
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>
    <div class="form-group text-right">
        <button type="button" id="submitCategoriaPresupuesto" class="btn btn-primary">Agregar</button>
    </div>
</form>