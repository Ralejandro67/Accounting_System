@model PupuseriaSalvadorena.Models.CategoriaPresupuesto

<form id="editCategoriaPresupuestoForm" asp-action="Edit" asp-controller="CategoriaPresupuestoes" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="IdCategoriaP" />
    <div class="row">
        <div class="col-md-7">
            <div class="form-group">
                <label class="control-label">Nombre de la Categoría</label>
                <input asp-for="Nombre" class="form-control" placeholder="Nombre de la Categoría" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                <label class="control-label">Tipo de Presupuesto</label>
                <select asp-for="Estado" class="form-control">
                    <option value="">Tipo de presupuesto</option>
                    @if (Model.Estado) {
                        <option value="true" selected>Ingreso</option>
                        <option value="false">Egreso</option>
                    }
                    else {
                        <option value="true">Ingreso</option>
                        <option value="false" selected>Egreso</option>
                    }
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group text-right">
        <button type="submit" id="submitEditCategoriaPresupuesto" class="btn btn-primary agregar-boton">Editar</button>
    </div>
</form>