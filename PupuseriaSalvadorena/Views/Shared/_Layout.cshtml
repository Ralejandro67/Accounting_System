<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pupuseria Salvadorena</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/estilo.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="~/PupuseriaSalvadorena.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <header>
        <nav id="topbar" class="navbar navbar-expand-lg">
            <div class="container-fluid d-flex justify-content-between">
                <img src="~/Images/Logo.png" alt="Logo de Pupuseria Salvadoreña" style="height: 45px;" />
                <div>
                    <button type="button" class="btn btn-primary nav-link-icon2 dropdown-toggle" id="dropdownNotificaciones" data-bs-toggle="dropdown" aria-expanded="false">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bell-fill" viewBox="0 0 16 16">
                            <path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2m.995-14.901a1 1 0 1 0-1.99 0A5 5 0 0 0 3 6c0 1.098-.5 6-2 7h14c-1.5-1-2-5.902-2-7 0-2.42-1.72-4.44-4.005-4.901" />
                        </svg>
                        <span id="notificationCount" class="badge text-bg-secondary">0</span>
                    </button>
                    <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownNotificaciones" id="notificacionesContainer">

                    </div>
                    <button type="button" class="btn btn-primary nav-link-icon">Cerrar Sesión</button>
                </div>
            </div>
        </nav>
    </header>
    <div class="wrapper">
        <nav id="sidebar" class="navbar navbar-expand-lg">
            <div class="container-fluid flex-column">
                <ul id="barnav" class="navbar-nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link nav-link-icon" asp-area="" asp-controller="Home" asp-action="Index">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house-fill" viewBox="0 0 16 16">
                                <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L8 2.207l6.646 6.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293z" />
                                <path d="m8 3.293 6 6V13.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5V9.293z" />
                            </svg>  Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-icon" asp-area="" asp-controller="Impuestos" asp-action="Index">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-tags-fill" viewBox="0 0 16 16">
                                <path d="M2 2a1 1 0 0 1 1-1h4.586a1 1 0 0 1 .707.293l7 7a1 1 0 0 1 0 1.414l-4.586 4.586a1 1 0 0 1-1.414 0l-7-7A1 1 0 0 1 2 6.586zm3.5 4a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3" />
                                <path d="M1.293 7.793A1 1 0 0 1 1 7.086V2a1 1 0 0 0-1 1v4.586a1 1 0 0 0 .293.707l7 7a1 1 0 0 0 1.414 0l.043-.043z" />
                            </svg>  Impuestos
                        </a>
                    </li>
                    <li class="nav-item">
                        <div class="accordion" id="accordionConciliacion">
                            <div class="accordion-item">
                                <a class="accordion-button collapsed nav-link-icon" data-bs-toggle="collapse" data-bs-target="#collapseConciliacion" aria-expanded="false" aria-controls="collapseConciliacion">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-check-fill" viewBox="0 0 16 16">
                                        <path d="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0M9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1m1.354 4.354-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 9.793l2.646-2.647a.5.5 0 0 1 .708.708" />
                                    </svg>  Conciliación Bancaria
                                </a>
                                <div id="collapseConciliacion" class="accordion-collapse collapse" aria-labelledby="headingConciliacion" data-bs-parent="#accordionConciliacion">
                                    <div class="accordion-body">
                                        <ul class="list-unstyled">
                                            <li><a class="dropdown-item" asp-area="" asp-controller="RegistroLibroes" asp-action="Index">Libros</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-controller="DetallesTransacciones" asp-action="Index">Transacciones</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-controller="TipoTransacciones" asp-action="Index">Tipo de Transacciones</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-controller="RegistroBancarios" asp-action="Index">RegistroBancarios</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-controller="ConciliacionBancarias" asp-action="Index">Conciliacion</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="nav-item">
                        <div class="accordion" id="accordionConciliacion">
                            <div class="accordion-item">
                                <a class="accordion-button collapsed nav-link-icon" data-bs-toggle="collapse" data-bs-target="#collapseConciliacion2" aria-expanded="false" aria-controls="collapseConciliacion">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-postcard-fill" viewBox="0 0 16 16">
                                        <path d="M11 8h2V6h-2z" />
                                        <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm8.5.5a.5.5 0 0 0-1 0v7a.5.5 0 0 0 1 0zM2 5.5a.5.5 0 0 0 .5.5H6a.5.5 0 0 0 0-1H2.5a.5.5 0 0 0-.5.5M2.5 7a.5.5 0 0 0 0 1H6a.5.5 0 0 0 0-1zM2 9.5a.5.5 0 0 0 .5.5H6a.5.5 0 0 0 0-1H2.5a.5.5 0 0 0-.5.5m8-4v3a.5.5 0 0 0 .5.5h3a.5.5 0 0 0 .5-.5v-3a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5" />
                                    </svg>  Cuentas por Pagar
                                </a>
                                <div id="collapseConciliacion2" class="accordion-collapse collapse" aria-labelledby="headingConciliacion" data-bs-parent="#accordionConciliacion">
                                    <div class="accordion-body">
                                        <ul class="list-unstyled">
                                            <li><a class="dropdown-item" asp-area="" asp-controller="TipoFacturas" asp-action="Index">Tipo de Facturas</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-controller="TipoPagos" asp-action="Index">Tipo de Pago</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-controller="Proveedores" asp-action="Index">Proveedores</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-controller="MateriaPrimas" asp-action="Index">Materias Primas</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-controller="FacturaCompras" asp-action="Index">Factura Compra</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-controller="CuentaPagars" asp-action="Index">Cuentas Pagar</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-controller="DetalleCuentas" asp-action="Index">Detalles Cuentas</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-controller="HistorialCompras" asp-action="Index">Historial de Compras</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-controller="AlertasCuentaPagar" asp-action="Index">Alertas</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Negocios" asp-action="Index">Negocio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Provincias" asp-action="Index">Provincias</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Cantones" asp-action="Index">Cantones</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Distritos" asp-action="Index">Distritos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Direcciones" asp-action="Index">Direcciones</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Telefonos" asp-action="Index">Telefonos</a>
                    </li>
                </ul>
            </div>
        </nav>
        <div id="content">
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/alertacuentapagar.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
