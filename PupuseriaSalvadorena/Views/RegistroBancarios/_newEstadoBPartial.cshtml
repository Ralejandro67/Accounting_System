@model PupuseriaSalvadorena.Models.RegistroBancario

@{
    Model.FechaRegistro = Model.FechaRegistro.Date == default ? DateTime.Now : Model.FechaRegistro;
}

<form id="estadoBacForm" asp-action="Create" asp-controller="RegistroBancarios" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="FechaRegistro" class="form-control" type="hidden" />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label">Numero de la Cuenta</label>
                <input id="NumeroCuenta" name="NumeroCuenta" class="form-control" placeholder="CR00000000000000000000" />
                <span asp-validation-for="NumeroCuenta" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label">Saldo Inicial de la Cuenta</label>
                <div class="input-group">
                    <span class="input-group-text">₡</span>
                    <input id="SaldoInicial" name="SaldoInicial" class="form-control" placeholder="0.00" />
                    <span asp-validation-for="SaldoInicial" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label">Descripción</label>
        <textarea asp-for="Observaciones" class="form-control" id="CampoArea" placeholder="Descripción adicional sobre la cuenta bancaria"></textarea>
        <span asp-validation-for="Observaciones" class="text-danger"></span>
    </div>
    <div class="form-group text-right">
        <button type="button" id="submitEstadoBacForm" class="btn btn-primary agregar-boton">Agregar</button>
    </div>
</form>