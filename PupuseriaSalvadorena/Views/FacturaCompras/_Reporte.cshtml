@model PupuseriaSalvadorena.Models.FacturaCompra

@{
    Model.FechaReporte = Model.FechaReporte == default ? DateTime.Now : Model.FechaReporte;
}

<form id="ReporteForm" asp-action="ReporteFacturas" asp-controller="FacturaCompras" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="TipoReporte" value="" />
    <div class="form-group">
        <label class="control-label">Mes del Reporte</label>
        <input asp-for="FechaReporte" class="form-control" type="month" />
        <span asp-validation-for="FechaReporte" class="text-danger"></span>
    </div>
    <div class="form-group text-right">
        <button type="button" id="submitReporteForm" class="btn btn-primary agregar-boton">Generar Reporte</button>
    </div>
</form>