@using System.Globalization;

@model IEnumerable<PupuseriaSalvadorena.Models.FacturaCompra>

@{
    ViewData["Title"] = "Facturas de Compra";
}

@section Scripts {
    <script src="~/js/compras.js" asp-append-version="true"></script>
    <script src="~/js/facturacompra.js" asp-append-version="true"></script>
}

<div class="card-body table-body-custom pb-4">
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center">
            <div style="width: 70%;">
                <h1 class="mb-0">
                    <img src="~/images/facturacompra.png" alt="Icono Factura de Compra" style="height: 60px;" />
                    Facturas de Compra
                </h1>
                <br />
                <p>Registro de las facturas sobre las compras de materia prima para la elaboracion de los platillos.</p>
            </div>
            <div class="text-right" style="width: 30%;">
                <button type="button" class="btn btn-primary nav-link-icon agregar-boton" id="NewReporte" data-idReporte="Excel">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-spreadsheet-fill" viewBox="0 0 16 16">
                        <path d="M6 12v-2h3v2z" />
