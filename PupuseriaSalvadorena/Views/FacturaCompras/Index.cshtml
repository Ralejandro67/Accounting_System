@using System.Globalization;

@model IEnumerable<PupuseriaSalvadorena.Models.FacturaCompra>

@{
    ViewData["Title"] = "Facturas de Compra";
}

@section Scripts {
    <script src="~/js/facturacompra.js" asp-append-version="true"></script>
}

<div class="card-body table-body-custom pb-4">
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="mb-0">
                <img src="~/images/facturacompra.png" alt="Icono Factura de Compra" style="height: 60px;" />
                Facturas de Compra
            </h1>
            <button type="button" class="btn btn-primary nav-link-icon" id="AddFacturaC">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3z" />
                </svg> Nueva Factura de Compra
            </button>
        </div>
    </div>
    <div class="container mt-4">
        Registro de las facturas sobre las compras de materia prima para la elaboracion de los platillos.
    </div>
</div>
<div class="card-body table-body-custom">
    <table class="table table-hover mt-4">
        <thead>
            <tr>
                <th>
                    Producto
                </th>
                <th>
                    Fecha
                </th>
                <th>
                    Valor
                </th>
                <th>
                    Pago
                </th>
                <th>
                    Observaciones
                </th>
                <th>
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreMateriaPrima)
                </td>
                <td>
                    @item.FechaFactura.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @item.TotalCompra.ToString("C", new CultureInfo("es-CR"))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombrePago)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DetallesCompra)
                </td>
                <td>
                    <button type="button" class="btn btn-primary download-Factura nav-link-btn-icons" id="BtnDetalles" onclick="location.href='@Url.Action("DescargarFactura", new { IdFacturaCompra = item.IdFacturaCompra })'">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cloud-arrow-down-fill" viewBox="0 0 16 16">
                            <path d="M8 2a5.53 5.53 0 0 0-3.594 1.342c-.766.66-1.321 1.52-1.464 2.383C1.266 6.095 0 7.555 0 9.318 0 11.366 1.708 13 3.781 13h8.906C14.502 13 16 11.57 16 9.773c0-1.636-1.242-2.969-2.834-3.194C12.923 3.999 10.69 2 8 2m2.354 6.854-2 2a.5.5 0 0 1-.708 0l-2-2a.5.5 0 1 1 .708-.708L7.5 9.293V5.5a.5.5 0 0 1 1 0v3.793l1.146-1.147a.5.5 0 0 1 .708.708" />
                        </svg>
                    </button>
                    <button type="button" class="btn btn-primary print-Factura nav-link-btn-icons" id="BtnImprimir" data-id="@item.IdFacturaCompra">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-printer-fill" viewBox="0 0 16 16">
                            <path d="M5 1a2 2 0 0 0-2 2v1h10V3a2 2 0 0 0-2-2zm6 8H5a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1v-3a1 1 0 0 0-1-1" />
                            <path d="M0 7a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2h-1v-2a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2v2H2a2 2 0 0 1-2-2zm2.5 1a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1" />
                        </svg>
                    </button>
                        <button type="button" class="btn btn-primary edit-Factura nav-link-btn-icons" id="BtnEditar" data-id="@item.IdFacturaCompra">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                            <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z" />
                        </svg>
                    </button>
                        <button type="button" class="btn btn-primary delete-Factura nav-link-btn-icons" id="BtnEliminar" data-id="@item.IdFacturaCompra">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                            <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
                        </svg>
                    </button>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<div class="modal fade" id="newFacturaCModal" tabindex="-1" role="dialog" aria-labelledby="newFacturaCModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newFacturaCModalLabel">Nueva Compra</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.Partial("_newFacturaCPartial", new PupuseriaSalvadorena.Models.FacturaCompra())
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="editFacturaCModal" tabindex="-1" role="dialog" aria-labelledby="editFacturaCModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editFacturaCModalLabel">Editar Transaccion</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.Partial("_editFacturaCPartial", new PupuseriaSalvadorena.Models.FacturaCompra())
            </div>
        </div>
    </div>
</div>
