@using System.Globalization;

@{
    Layout = null;
}

@model PupuseriaSalvadorena.ViewModels.Declaraciones

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Descargas - Pupuseria Salvadoreña</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/Documentos.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="~/PupuseriaSalvadorena.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <table class="table table-borderless" style="width: 100%;">
        <tr>
            <td style="width: 70%;">
                <h2 class="TituloReporte">
                    <img src="~/images/target.png" alt="Icono Target" style="height: 60px;" />
                    Declaracion de Impuestos D-105
                </h2>
                <p class="ReporteCampos"><strong>Id: </strong>@Model.DeclaracionImpuesto.IdDeclaracionImpuesto</p>
                <p class="ReporteCampos"><strong>Fecha: </strong>@Model.DeclaracionImpuesto.FechaInicio.ToString("dd/MM/yyyy")</p>
                <p class="ReporteCampos"><strong>Periodo: </strong>@Model.DeclaracionImpuesto.Trimestre</p>
                <p class="ReporteCampos">@Model.DeclaracionImpuesto.Observaciones</p>
            </td>
            <td style="width: 30%; text-align: right;">
                <img src="~/images/logo3.png" alt="Logo de Pupuseria Salvadoreña" style="height: 110px;" />
                <p class="ReporteCampos">@Model.Negocio.Detalles</p>
                <p class="ReporteCampos">@Model.Negocio.CedulaJuridica</p>
                <p class="ReporteCampos">@Model.Negocio.Telefono</p>
            </td>
        </tr>
    </table>
    <hr>
    <div class="container">
        <div id="Titulo">
            <h5 class="mt-1 mb-3">Detalles</h5>
        </div>
        <table class="table table-borderless" style="width: 100%;">
            <tr>
                <td style="width: 25%; text-align: center;">
                    <strong>Total en Compras</strong>
                    <p class="mt-2 mb-0">@Model.DeclaracionImpuesto.MontoTotal.ToString("C", new CultureInfo("es-CR"))</p>
                </td>
                <td style="width: 25%; text-align: center;">
                    <strong>Renta (2%)</strong>
                    <p class="mt-2 mb-0">@Model.DeclaracionImpuesto.MontoRenta.ToString("C", new CultureInfo("es-CR"))</p>
                </td>
                <td style="width: 25%; text-align: center;">
                    <strong>IVA (4%)</strong>
                    <p class="mt-2 mb-0">@Model.DeclaracionImpuesto.MontoIVA.ToString("C", new CultureInfo("es-CR"))</p>
                </td>
                <td style="width: 25%; text-align: center;">
                    <strong>Impuestos por Pagar</strong>
                    <p class="mt-2 mb-0">@Model.DeclaracionImpuesto.MontoTotalImpuestos.ToString("C", new CultureInfo("es-CR"))</p>
                </td>
            </tr>
        </table>
    </div>
    <div class="card-body table-body-custom3">
        <div>
            <h5>Transacciones: </h5>
        </div>
        <div class="container mt-2 pl-0">
            Transacciones asociadas a la declaracion.
        </div>
        <table class="table table-sm mt-4">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Fecha
                    </th>
                    <th>
                        Descripcion
                    </th>
                    <th>
                        Cantidad
                    </th>
                    <th>
                        Debito
                    </th>
                    <th>
                        Tipo de Transaccion
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var transaccion in Model.DetallesTransacciones)
                {
                    <tr>
                        <td>@transaccion.IdTransaccion</td>
                        <td>@transaccion.FechaTrans.ToString("dd/MM/yyyy")</td>
                        <td>@transaccion.DescripcionTransaccion</td>
                        <td>@transaccion.Cantidad</td>
                        <td>@transaccion.Monto.ToString("C", new CultureInfo("es-CR"))</td>
                        <td>@transaccion.TipoTransac</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>