@using System.Globalization;

@model PupuseriaSalvadorena.ViewModels.DetallesProveedor

@{
    ViewData["Title"] = "Proveedor";
}

@section Scripts {
    <script src="~/js/detallesproveedor.js" asp-append-version="true"></script>
}

<div class="card-body table-body-custom pb-4">
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="mb-0">
                <img src="~/images/usuarios.png" alt="Icono de Usuario" style="height: 60px;" />
                @Model.Proveedor.ProveedorCompleto
            </h1>
            <button type="button" class="btn btn-primary edit-Proveedor nav-link-icon agregar-boton" data-id="@Model.Proveedor.IdProveedor">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                    <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z" />
                </svg> Editar Proveedor
            </button>
        </div>
    </div>
    <hr />
    <div class="container mt-2">
        <div class="mb-4" id="Titulo">
            <h5 class="mb-3">Compras de @ViewBag.mesActual</h5>
            <div class="d-flex justify-content-center">
                <canvas id="ComprasMatChart"></canvas>
            </div>
        </div>
        <div class="card-body table-body-custom" style="margin-top: 0 !important; margin-bottom: 0 !important">
            <div class="d-flex justify-content-between align-items-center" style="text-align:center">
                <div class="card-body justify-content-center item">
                    <strong>Telefono</strong>
                    <p class="mt-2 mb-0">@Model.Proveedor.Telefono</p>
                </div>
                <div class="card-body justify-content-center item">
                    <strong>Cuentas Asociadas</strong>
                    <p class="mt-2 mb-0">@ViewBag.TotalCuentas</p>
                </div>
                <div class="card-body justify-content-center item">
                    <strong>Materias Primas Ofrecidas</strong>
                    <p class="mt-2 mb-0">@ViewBag.TotalMateriasPrimas</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="card-body pt-4 pb-4 table-body-custom">
    <h5>Materias Primas</h5>
    <table class="table table-hover mt-4">
        <thead>
            <tr>
                <th>ID</th>
                <th>Materia Prima</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var materias in Model.MateriasPrimas)
            {
                <tr>
                    <td>@materias.IdMateriaPrima</td>
                    <td>@materias.NombreMateriaPrima</td>
                    <td>
                        <button type="button" class="btn btn-primary edit-Materia nav-link-btn-icons" id="BtnEditar" data-id="@materias.IdMateriaPrima">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z" />
                            </svg>
                        </button>
                        <button type="button" class="btn btn-primary delete-Materia nav-link-btn-icons" id="BtnEliminar" data-id="@materias.IdMateriaPrima">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
                            </svg>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="card-body pt-4 pb-4 table-body-custom">
    <h5>Cuentas Por Pagar</h5>
    <table class="table table-hover mt-4">
        <thead>
            <tr>
                <th>ID Factura</th>
                <th>Fecha de Creacion</th>
                <th>Fecha de Expiracion</th>
                <th>Monto Total</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cuenta in Model.CuentasPagar)
            {
                <tr>
                    <td>@cuenta.IdFacturaCompra</td>
                    <td>@cuenta.FechaCreacion.ToString("dd/MM/yyyy")</td>
                    <td>@cuenta.FechaVencimiento.ToString("dd/MM/yyyy")</td>
                    <td>@cuenta.TotalPagado.ToString("C", new CultureInfo("es-CR"))</td>
                    <td>@(cuenta.Estado ? "Activo" : "Inactivo")</td>
                    <td>
                        <button type="button" class="btn btn-primary print-CuentaPagar nav-link-btn-icons" id="BtnImprimir" data-id="@cuenta.IdCuentaPagar">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-printer-fill" viewBox="0 0 16 16">
                                <path d="M5 1a2 2 0 0 0-2 2v1h10V3a2 2 0 0 0-2-2zm6 8H5a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1v-3a1 1 0 0 0-1-1" />
                                <path d="M0 7a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2h-1v-2a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2v2H2a2 2 0 0 1-2-2zm2.5 1a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1" />
                            </svg>
                        </button>
                        <button type="button" class="btn btn-primary pay-CuentaPagar nav-link-btn-icons" id="BtnPagar" onclick="location.href='@Url.Action("Details", "DetalleCuentas", new { id = cuenta.IdCuentaPagar })'">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cash-stack" viewBox="0 0 16 16">
                                <path d="M1 3a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1zm7 8a2 2 0 1 0 0-4 2 2 0 0 0 0 4" />
                                <path d="M0 5a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1zm3 0a2 2 0 0 1-2 2v4a2 2 0 0 1 2 2h10a2 2 0 0 1 2-2V7a2 2 0 0 1-2-2z" />
                            </svg>
                        </button>
                        <button type="button" class="btn btn-primary edit-CuentaPagar nav-link-btn-icons" id="BtnEditar" data-id="@cuenta.IdCuentaPagar">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z" />
                            </svg>
                        </button>
                        <button type="button" class="btn btn-primary delete-CuentaPagar nav-link-btn-icons" id="BtnEliminar" data-id="@cuenta.IdCuentaPagar">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
                            </svg>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="modal fade" id="editProveedorModal" tabindex="-1" role="dialog" aria-labelledby="editProveedorModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editProveedorModalLabel">Editar Compra</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.Partial("_editProveedorPartial", new PupuseriaSalvadorena.Models.Proveedor())
            </div>
        </div>
    </div>
</div>

<script>
    var detalles = @Html.Raw(ViewBag.MateriasPrimasConteo);
</script>