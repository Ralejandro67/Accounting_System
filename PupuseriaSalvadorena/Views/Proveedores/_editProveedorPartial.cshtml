@model PupuseriaSalvadorena.Models.Proveedor

<form id="editProveedorForm" asp-action="Edit" asp-controller="Proveedores" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="IdProveedor" />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label">Nombre</label>
                <input asp-for="NombreProveedor" class="form-control" placeholder="Nombre" />
                <span asp-validation-for="NombreProveedor" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label">Apellido</label>
                <input asp-for="ApellidoProveedor" class="form-control" placeholder="Apellido" />
                <span asp-validation-for="ApellidoProveedor" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label">Telefono</label>
        <input asp-for="Telefono" class="form-control" id="TelefonoEdit"/>
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>
    <div class="form-group text-right">
        <button type="submit" id="submitEditProveedor" class="btn btn-primary agregar-boton">Editar</button>
    </div>
</form>