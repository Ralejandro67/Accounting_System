@model PupuseriaSalvadorena.Models.MateriaPrima

<form id="MateriaPrimaForm" asp-action="Create" asp-controller="MateriaPrimas" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="NombreMateriaPrima" class="control-label"></label>
        <input asp-for="NombreMateriaPrima" class="form-control" />
        <span asp-validation-for="NombreMateriaPrima" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdProveedor" class="control-label"></label>
        <select asp-for="IdProveedor" asp-items="@ViewBag.Proveedores" class="form-control">
            <option value="">Seleccione un impuesto</option>
        </select>
        <span asp-validation-for="IdProveedor" class="text-danger"></span>
    </div>
    <div class="form-group text-right">
        <button type="button" id="submitMateriaPrima" class="btn btn-primary">Agregar</button>
    </div>
</form>