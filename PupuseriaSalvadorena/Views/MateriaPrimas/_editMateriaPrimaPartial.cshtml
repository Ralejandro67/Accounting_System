@model PupuseriaSalvadorena.Models.MateriaPrima

<form id="editMateriaPrimaForm" asp-action="Edit" asp-controller="MateriaPrimas" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="IdMateriaPrima" />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label">Materia Prima</label>
                <input asp-for="NombreMateriaPrima" class="form-control" placeholder="Introduce el nombre" />
                <span asp-validation-for="NombreMateriaPrima" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label">Proveedor</label>
                <select asp-for="IdProveedor" asp-items="@ViewBag.Proveedores" class="form-control" id="ProveedorId">
                    <option value="">Seleccione un impuesto</option>
                </select>
                <span asp-validation-for="IdProveedor" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group text-right">
        <button type="submit" id="submitEditMateriaPrima" class="btn btn-primary agregar-boton">Editar</button>
    </div>
</form>