@using System.Globalization;

@{
    Layout = null;
}

@model PupuseriaSalvadorena.ViewModels.PronosticoPDF

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Descargas - Pupuseria Salvadoreña</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/estilo.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="~/PupuseriaSalvadorena.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <table class="table table-borderless" style="width: 100%;">
        <tr>
            <td style="width: 70%;">
                <h2 class="mt-4 TituloReporte">
                    <img src="~/images/pronosticos.png" alt="Icono Pronosticos" style="height: 60px;" />
                    Pronostico @Model.Pronostico.NombrePlatillo
                </h2>
                <p class="mt-5 ReporteCampos"><strong>Fecha de Inicio: </strong>@Model.Pronostico.FechaInicio.ToString("dd/MM/yyyy")</p>
                <p class="ReporteCampos"><strong>Fecha de Final: </strong>@Model.Pronostico.FechaFinal.ToString("dd/MM/yyyy")</p>
            </td>
            <td style="width: 30%; text-align: right;">
                <img src="~/images/logo3.png" alt="Logo de Pupuseria Salvadoreña" style="height: 110px;" />
                <p class="ReporteCampos">@Model.Negocio.Detalles</p>
                <p class="ReporteCampos">@Model.Negocio.CedulaJuridica</p>
                <p class="ReporteCampos">@Model.Negocio.Telefono</p>
            </td>
        </tr>
    </table>
    <hr>
    <div class="container">
        <div id="Titulo">
            <h5 class="mt-1 mb-3">Detalles</h5>
        </div>
        <table class="table table-borderless" style="width: 100%;">
            <tr>
                <td style="width: 33%; text-align: center;">
                    <strong>Dias Pronosticados</strong>
                    <p class="mt-2 mb-0">@Model.TotalPronosticos</p>
                </td>
                <td style="width: 34%; text-align: center;">
                    <strong>Total en Ventas</strong>
                    <p class="mt-2 mb-0">@Model.Pronostico.CantTotalProd</p>
                </td>
                <td style="width: 33%; text-align: center;">
                    <strong>Valor en Ventas</strong>
                    <p class="mt-2 mb-0">@Model.Pronostico.TotalVentas.ToString("C", new CultureInfo("es-CR"))</p>
                </td>
            </tr>
        </table>
    </div>
    <div class="card-body mt-3 table-body-custom3">
        <div>
            <h5>Pronosticos: </h5>
        </div>
        <table class="table table-sm mt-4">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Fecha</th>
                    <th>Cantidad a Vender</th>
                    <th>Valor de las Ventas</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pronosticos in Model.DetallesP)
                {
                    <tr>
                        <td>@pronosticos.IdDetallePronostico</td>
                        <td>@pronosticos.FechaPronostico.ToString("dd/MM/yyyy")</td>
                        <td>@pronosticos.PCantVenta</td>
                        <td>@pronosticos.PValorVenta.ToString("C", new CultureInfo("es-CR"))</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>