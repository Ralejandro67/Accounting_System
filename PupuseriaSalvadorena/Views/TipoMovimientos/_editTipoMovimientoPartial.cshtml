@model PupuseriaSalvadorena.Models.TipoMovimiento

<form id="editTipoMovimientoForm" asp-action="Edit" asp-controller="Proveedores" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="IdMovimiento" />
    <div class="form-group">
        <label class="control-label">Nombre del Movimiento</label>
        <input asp-for="NombreMov" class="form-control" />
        <span asp-validation-for="NombreMov" class="text-danger"></span>
    </div>
    <div class="form-group text-right">
        <button type="submit" id="submitEditTipoMovimiento" class="btn btn-primary agregar-boton">Editar</button>
    </div>
</form>