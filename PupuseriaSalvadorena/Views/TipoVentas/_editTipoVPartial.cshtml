@model PupuseriaSalvadorena.Models.TipoVenta

<form id="editTipoVForm" asp-action="Edit" asp-controller="TipoVentas" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="IdTipoVenta" />
    <div class="form-group">
        <label class="control-label">Nombre del Tipo de Venta</label>
        <input asp-for="NombreVenta" class="form-control" placeholder="Introduce el nombre de la categoria" />
        <span asp-validation-for="NombreVenta" class="text-danger"></span>
    </div>
    <div class="form-group form-check" style="padding-left: 0; margin-bottom: 0.5rem;">
        <input asp-for="Estado" type="checkbox" id="check" class="form-check-input" />
        <label asp-for="Estado" for="check" class="form-check-label CheckboxTransac"><span></span></label>@Html.DisplayNameFor(model => model.Estado)
    </div>
    <div class="form-group text-right">
        <button type="submit" id="submitEditTipoVForm" class="btn btn-primary agregar-boton">Editar</button>
    </div>
</form>