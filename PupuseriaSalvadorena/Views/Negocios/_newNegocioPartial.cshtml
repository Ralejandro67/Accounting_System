@model PupuseriaSalvadorena.Models.Negocio

<form id="negocioForm" asp-action="Create" asp-controller="Negocios" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="CedulaJuridica" class="control-label"></label>
        <input asp-for="CedulaJuridica" class="form-control" />
        <span asp-validation-for="CedulaJuridica" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NombreEmpresa" class="control-label"></label>
        <input asp-for="NombreEmpresa" class="form-control" />
        <span asp-validation-for="NombreEmpresa" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdDireccion" class="control-label"></label>
        <select asp-for="IdDireccion" asp-items="@ViewBag.Direccion" class="form-control">
            <option value="">Seleccione un impuesto</option>
        </select>
        <span asp-validation-for="IdDireccion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdTelefono" class="control-label"></label>
        <select asp-for="IdTelefono" asp-items="@ViewBag.Telefono" class="form-control">
            <option value="">Seleccione un impuesto</option>
        </select>
        <span asp-validation-for="IdTelefono" class="text-danger"></span>
    </div>
    <div class="form-group text-right">
        <button type="button" id="submitNegocioForm" class="btn btn-primary">Agregar</button>
    </div>
</form>