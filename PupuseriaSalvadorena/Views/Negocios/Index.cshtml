@model PupuseriaSalvadorena.Models.Negocio

@{
    ViewData["Title"] = "Negocio";
}

@section Scripts {
    <script src="~/js/negocios.js" asp-append-version="true"></script>
}

<div class="card-body table-body-custom pb-4">
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center">
            <div style="width: 70%;">
                <h2 class="mb-0">
                    <img src="~/Images/Logo3.png" alt="Icono Pronosticos" style="height: 80px;" />
                    @Model.NombreEmpresa
                </h2>
            </div>
            <div class="text-right" style="width: 30%;">
                <button type="button" class="btn btn-primary nav-link-icon edit-Negocio agregar-boton" data-id="@Model.CedulaJuridica">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                        <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z" />
                    </svg> Editar Negocio
                </button>
            </div>
        </div>
        <hr />
        <h4 class="mb-3">Información</h4>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group mb-0">
                    <strong>Identificación: </strong>
                    <br />
                    <p style="margin-bottom: 0 !important;">@Model.CedulaJuridica</p>
                </div>
                <br />
                <div class="form-group mb-0">
                    <strong>Telefono: </strong>
                    <br />
                    <p style="margin-bottom: 0 !important;">@Model.Telefono</p>
                </div>
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    <strong>Direccion: </strong>
                    <br />
                    <p style="margin-bottom: 0 !important;">@Model.NombreProvincia, @Model.NombreCanton, @Model.NombreDistrito, @Model.Detalles</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="editNegocioModal" tabindex="-1" role="dialog" aria-labelledby="editNegocioModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editNegocioModalLabel">Editar Negocio</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.Partial("_editNegocioPartial", new PupuseriaSalvadorena.Models.Negocio())
            </div>
        </div>
    </div>
</div>