@model PupuseriaSalvadorena.Models.Negocio

<form id="editNegocioForm" asp-action="Edit" asp-controller="Negocios" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="IdDireccion" />
    <input type="hidden" asp-for="IdTelefono" />
    <input type="hidden" asp-for="Estado" value="true"/>
    <div class="form-group">
        <label class="control-label">Nombre de la Empresa</label>
        <input asp-for="NombreEmpresa" class="form-control" placeholder="Apellido" />
        <span asp-validation-for="NombreEmpresa" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label">Cedula Juridica</label>
                <input asp-for="CedulaJuridica" class="form-control" placeholder="Identificacion" readonly />
                <span asp-validation-for="CedulaJuridica" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label">Telefono</label>
                <input asp-for="Telefono" class="form-control" id="TelefonoEdit" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label">Provincia</label>
                <select asp-for="IdProvincia" asp-items="@ViewBag.Provincias" class="form-control" id="IdProvinciaEdit">
                    <option value="">Seleccione la provincia</option>
                </select>
                <span asp-validation-for="IdProvincia" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label">Canton</label>
                <select asp-for="IdCanton" asp-items="@ViewBag.Cantones" class="form-control" id="IdCantonEdit">
                    <option value="">Seleccione el canton</option>
                </select>
                <span asp-validation-for="IdCanton" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label">Distrito</label>
        <select asp-for="IdDistrito" asp-items="@ViewBag.Distritos" class="form-control" id="IdDistritoEdit">
            <option value="">Seleccione el canton</option>
        </select>
        <span asp-validation-for="IdDistrito" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Dirección Exacta</label>
        <textarea asp-for="Detalles" class="form-control" id="CampoArea" placeholder="Dirección de la empresa"></textarea>
        <span asp-validation-for="Detalles" class="text-danger"></span>
    </div>
    <div class="form-group text-right">
        <button type="submit" id="submitEditNegocioForm" class="btn btn-primary agregar-boton">Editar</button>
    </div>
</form>