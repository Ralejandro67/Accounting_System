@model PupuseriaSalvadorena.Models.Platillo

<form id="PlatilloForm" asp-action="Create" asp-controller="Platillos" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="NombrePlatillo" class="control-label"></label>
        <input asp-for="NombrePlatillo" class="form-control" placeholder="Introduce el nombre del platillo" />
        <span asp-validation-for="NombrePlatillo" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label">Costo de Produccion</label>
                <div class="input-group">
                    <span class="input-group-text">₡</span>
                    <input id="CostoProduccion" name="CostoProduccion" class="form-control" placeholder="0.00" />
                    <span asp-validation-for="CostoProduccion" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label">Precio de Venta</label>
                <div class="input-group">
                    <span class="input-group-text">₡</span>
                    <input id="PrecioVenta" name="PrecioVenta" class="form-control" placeholder="0.00" />
                    <span asp-validation-for="PrecioVenta" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group text-right">
        <button type="button" id="submitPlatilloForm" class="btn btn-primary agregar-boton">Agregar</button>
    </div>
</form>