@using System.Globalization;

@model IEnumerable<PupuseriaSalvadorena.Models.FacturaVenta>

@{
    ViewData["Title"] = "Facturas de Venta";
}

@section Scripts {
    <script src="~/js/facturaventa.js" asp-append-version="true"></script>
}

<div class="card-body table-body-custom pb-4">
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="mb-0">
                <img src="~/images/facturaventa.png" alt="Icono Factura de Venta" style="height: 60px;" />
                Facturas de Venta
            </h1>
            <button type="button" class="btn btn-primary nav-link-icon" id="AddFacturaVenta">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3z" />
                </svg> Nueva Factura
            </button>
        </div>
    </div>
    <div class="container mt-4">
        Realiza tu facturacion de ventas de forma sencilla y rapida. Puedes ver el detalle de tus facturas, editarlas, imprimirlas y realizar el envio de las mismas a tus clientes.
    </div>
</div>
<div class="card-body table-body-custom pt-4 pb-4">
    <div class="container mt-2">
        <div id="Titulo">
            <h4 class="mt-1 mb-3">Resumen de Ventas</h4>
            <canvas id="FacturasChart"></canvas>
        </div>
        <hr />
        <div class="card-body table-body-custom" style="height: auto; margin-top: 0 !important; margin-bottom: 0 !important">
            <div class="d-flex justify-content-between align-items-center" style="text-align:center">
                <div class="card-body justify-content-center item">
                    <strong>Total Facturas</strong>
                    <p class="mt-2 mb-0">@ViewBag.facturas</p>
                </div>
                <div class="card-body justify-content-center item">
                    <strong>Facturas de @ViewBag.mesActual</strong>
                    <p class="mt-2 mb-0">@ViewBag.facturasMes</p>
                </div>
                <div class="card-body justify-content-center item">
                    <strong>Valor Total</strong>
                    <p class="mt-2 mb-0">@ViewBag.totalVentas.ToString("C", new CultureInfo("es-CR"))</p>
                </div>
                <div class="card-body justify-content-center item">
                    <strong>Valor de @ViewBag.mesActual</strong>
                    <p class="mt-2 mb-0">@ViewBag.totalVentasMes.ToString("C", new CultureInfo("es-CR"))</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="card-body table-body-custom">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    Numero
                </th>
                <th>
                    Fecha
                </th>
                <th>
                    Subtotal
                </th>
                <th>
                    Total
                </th>
                <th>
                    Tipo de Pago
                </th>
                <th>
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Convert.ToInt32(Math.Floor(item.Consecutivo))
                    </td>
                    <td>
                        @item.FechaFactura.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @item.SubTotal.ToString("C", new CultureInfo("es-CR"))
                    </td>
                    <td>
                        @item.TotalVenta.ToString("C", new CultureInfo("es-CR"))
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombrePago)
                    </td>
                    <td>
                        <button type="button" class="btn btn-primary print-FacturaVenta nav-link-btn-icons" id="BtnImprimir" data-id="@item.IdFacturaVenta">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-printer-fill" viewBox="0 0 16 16">
                                <path d="M5 1a2 2 0 0 0-2 2v1h10V3a2 2 0 0 0-2-2zm6 8H5a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1v-3a1 1 0 0 0-1-1" />
                                <path d="M0 7a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2h-1v-2a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2v2H2a2 2 0 0 1-2-2zm2.5 1a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1" />
                            </svg>
                        </button>
                        <button type="button" class="btn btn-primary details-FacturaVenta nav-link-btn-icons" id="BtnDetalles" data-id="@item.IdFacturaVenta">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                                <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0" />
                                <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8m8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7" />
                            </svg>
                        </button>
                        <button type="button" class="btn btn-primary edit-FacturaVenta nav-link-btn-icons" id="BtnEditar" data-id="@item.IdFacturaVenta">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z" />
                            </svg>
                        </button>
                        <button type="button" class="btn btn-primary delete-FacturaVenta nav-link-btn-icons" id="BtnEliminar" data-id="@item.IdFacturaVenta">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
                            </svg>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="modal fade" id="newFacturaVentaModal" tabindex="-1" role="dialog" aria-labelledby="newTipoVModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newTipoVModalLabel">Nueva Factura</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.Partial("_newFacturaVentaPartial", new PupuseriaSalvadorena.Models.FacturaVenta())
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="editFacturaVentaModal" tabindex="-1" role="dialog" aria-labelledby="editFacturaVentaModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editFacturaVentaModalLabel">Editar Factura</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.Partial("_editFacturaVentaPartial", new PupuseriaSalvadorena.Models.FacturaVenta())
            </div>
        </div>
    </div>
</div>

<script>
    var Meses = @Html.Raw(Json.Serialize(ViewBag.Meses));
    var ventasPorMes = @Html.Raw(Json.Serialize(ViewBag.ventasPorMes));
</script>