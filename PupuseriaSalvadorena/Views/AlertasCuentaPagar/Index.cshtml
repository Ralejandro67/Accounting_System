@model IEnumerable<PupuseriaSalvadorena.Models.AlertaCuentaPagar>

@{
    ViewData["Title"] = "Index";
}

<div class="card-body table-body-custom pb-4">
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center">
            <div style="width: 60%;">
                <h1 class="mb-0">
                    <img src="~/images/alertas.png" alt="Icono de Alertas de Cuentas por Pagar" style="height: 60px;" />
                    Alertas de Cuentas por Pagar
                </h1>
                <br />
                <p>Alerta de expiracion sobre las cuentas por pagar.</p>
            </div>
            <div class="text-right" style="width: 40%;">
                <button type="button" class="btn btn-primary nav-link-icon agregar-boton" id="AddMateriaPrima">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                        <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0" />
                        <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8m8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7" />
                    </svg> Marcar todas como leidas
                </button>
                <button type="button" class="btn btn-primary mt-2 nav-link-icon agregar-boton" id="AddMateriaPrima">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                        <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
                    </svg> Borrar Notificaciones Leidas
                </button>
            </div>
        </div>
    </div>
</div>
<div class="card-body table-body-custom">
    @if (Model.Count() > 0)
    {
        <div class="d-flex justify-content-between align-items-center mt-4">
            <h4>Notificaciones:</h4>
            <input type="text" class="form-control" id="busqueda" placeholder="Filtrar" />
        </div>
        <table class="table table-hover mt-4 table-sm" id="tablaAlertas">
            <thead>
                <tr>
                    <th>
                        Mensaje
                    </th>
                    <th id="Fecha">
                        Fecha
                    </th>
                    <th>
                        Cuenta por Pagar
                    </th>
                    <th>
                        Visto
                    </th>
                    <th id="acciones">
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Mensaje)
                        </td>
                        <td>
                            @item.FechaMensaje.ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdCuentaPagar)
                        </td>
                        <td>
                            @(item.Leido ? "Leida" : "No Leida")
                        </td>
                        <td>
                            <button type="button" class="btn btn-primary seen-Alerta nav-link-btn-icons" id="BtnImprimir" data-id="@item.IdAlerta">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                                    <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0" />
                                    <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8m8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7" />
                                </svg>
                            </button>
                            <button type="button" class="btn btn-primary delete-Alerta nav-link-btn-icons" id="BtnDetalles" data-id="@item.IdAlerta">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                    <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
                                </svg>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="container mt-4 mb-4">
            <h4 class="text-center">No hay ninguna alerta.</h4>
        </div>
    }
</div>